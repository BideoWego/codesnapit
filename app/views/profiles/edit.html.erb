<div class="row">
  <div class="col-sm-6">
    <h2>CodeSnapIt Profile</h2>
    Could you tell us a little about yourself?

    <%= form_for @profile, html: { class: "form-horizontal" } do |f| %>

      <div class="form-group">
        <%= f.label :full_name, class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.text_field :full_name, placeholder: "Dr Cool Snapit" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :website, class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.text_field :website, placeholder: "http://www.google.com" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :bio, "Hobbies, favorite condiments, etc", class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.text_area :bio, placeholder: "Loves hotdogs, with all the fixins" %>
        </div>
      </div>

      <%= f.submit "Update Profile", class: "btn btn-primary" %>
        
    <% end %>
      
  </div>
</div>