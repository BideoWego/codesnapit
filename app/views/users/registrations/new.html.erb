<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    
    <h2 class="text-center">Sign up and start snapping code!</h2>

  </div>
</div>

<div class="row">
  <div class="col-sm-4 col-sm-offset-4">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      
      <div class="form-group">
        <%= f.label :username, class: "control-label" %>
        <%= f.text_field :username, autofocus: true %>
        <%= render partial: 'shared/form_error', 
                   locals: {errors: resource.errors.full_messages_for(:username)} %>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "control-label" %>
        <%= f.email_field :email %>
        <%= render partial: 'shared/form_error', 
                   locals: {errors: resource.errors.full_messages_for(:email)} %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "control-label" do %>
          Password
          <% if @minimum_password_length %>
            <span class="sub-label">
              (<%= @minimum_password_length %> characters minimum)
            </span>
          <% end %>
        <% end %>
        <%= f.password_field :password, autocomplete: "off" %>
        <%= render partial: 'shared/form_error', 
                   locals: {errors: resource.errors.full_messages_for(:password)} %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "control-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
        <%= render partial: 'shared/form_error', 
                   locals: {errors: resource.errors.full_messages_for(:password_confirmation)} %>
      </div>

      
      <%= f.submit "Sign up!", class: "btn btn-primary" %>
      <%= render "devise/shared/links" %>

    <% end %>

   
    
  </div>
</div>

