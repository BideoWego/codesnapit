<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    
    <h2 class="text-center">Account Basics</h2>
    <p class="text-center">Change your username, email, or password</p>

  </div>
</div>

<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    
    <p>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

        <div class="form-group">
          <%= f.label :username, class: "control-label" %>
          <%= f.text_field :username %>
          <%= render partial: 'shared/form_error', 
                     locals: {errors: resource.errors.full_messages_for(:username)} %>
        </div>

        <div class="form-group">
          <%= f.label :email, class: "control-label" %>
          <%= f.email_field :email %>
          <%= render partial: 'shared/form_error', 
                     locals: {errors: resource.errors.full_messages_for(:email)} %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="form-group">
          <%= f.label :password, class: "control-label" do %>
           Password <span class="sub-label">(leave blank if you don't want to change it)</span>
          <% end %>
          <%= f.password_field :password, autocomplete: "off" %>
          <%= render partial: 'shared/form_error', 
                     locals: {errors: resource.errors.full_messages_for(:password)} %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, class: "control-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
          <%= render partial: 'shared/form_error', 
                     locals: {errors: resource.errors.full_messages_for(:password_confirmation)} %>
        </div>

        <div class="form-group">
          <%= f.label :current_password, class: "control-label" do %>
            Current password <span class="sub-label">(required to make changes or delete account)</span>
          <% end %>
          <%= f.password_field :current_password, autocomplete: "off" %>
          <%= render partial: 'shared/form_error', 
                     locals: {errors: resource.errors.full_messages_for(:current_password)} %>
        </div>

        
        <%= f.submit "Update", class: "btn btn-primary" %>
        <%= link_to "Back", :back, class: "btn btn-link" %>

        <h3>Cancel my account</h3>

        <%= f.submit "Delete Account", class:"btn btn-danger" %>

      <% end %>
    </p>
    
  </div>
</div>

